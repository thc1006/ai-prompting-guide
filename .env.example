# Environment Configuration Template
# Copy this file to .env.local for local development
# Never commit .env files with actual values to version control

# Node environment (development, production, test)
NODE_ENV=production

# Application URL
SITE_URL=https://thc1006.github.io
BASE_URL=/ai-prompting-guide/

# Server Configuration (for local development only)
HOST=localhost
PORT=3000

# Security Settings
ENABLE_CSP=true
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# API Configuration (if needed)
# API_KEY=your_api_key_here
# API_ENDPOINT=https://api.example.com

# Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X
# GTM_ID=GTM-XXXXXXX

# Feature Flags
ENABLE_SEARCH=true
ENABLE_BLOG=true
ENABLE_DOCS=true

# Build Configuration
BUILD_ANALYZE=false
SOURCE_MAPS=false

# Deployment
DEPLOYMENT_BRANCH=gh-pages
GIT_USER=github-actions[bot]

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Security
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.md,.mdx,.jpg,.jpeg,.png,.gif,.svg,.pdf

# Session Configuration
SESSION_SECRET=generate_a_secure_random_string_here
SESSION_MAX_AGE=86400000

# CORS Settings
CORS_ORIGIN=https://thc1006.github.io
CORS_METHODS=GET,HEAD,OPTIONS
CORS_CREDENTIALS=false